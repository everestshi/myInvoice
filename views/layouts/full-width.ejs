<!DOCTYPE html>
<html lang="en">
  <head> </head>
  <body>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node Passport Auth Demo</title>

    <main role="main" class="container">
      <div class="starter-template">
        <a href="/">Home</a> |
        <!-- Show 'Logout' and user name if authenticated. -->
        <%if (reqInfo.authenticated) { %>
        <a href="/user/profile">My Profile</a> | <% if
        (reqInfo.roles.includes("Admin")) { %>
        <a href="/secure/admin">Admin Area</a> | <% } %> <% if
        (reqInfo.roles.includes("Admin") || reqInfo.roles.includes("Manager")) {
        %> <a href="/secure/manager">Manager Area</a> | <% } %>
        <a href="/user/logout">Logout</a>

        <!-- 'else' must be in separate section with curly brackets to work. -->
        <% } else { %>
        <a href="/user/register">Register</a> |
        <a href="/user/login">Login</a>
        <% } %>

        <!-- Child view will be rendered here. -->
        <body>
          <%- include('../partials/header.ejs') %>
          <main><%- body %></main>
          <%- include('../partials/footer.ejs') %>
        </body>
      </div>
    </main>
  </body>
</html>
