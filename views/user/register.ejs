<form id="registerForm" action="/user/register" method="POST">
  <table>
    <tbody>
      <tr>
        <td>User Name:</td>
        <td>
          <input
            id="usernameInput"
            name="username"
            type="text"
            placeholder="Enter your username"
            value="<%= user.username ? user.username : '' %>"
          />
        </td>
      </tr>
      <tr>
        <td>Email:</td>
        <td>
          <input
            id="emailInput"
            name="email"
            type="text"
            placeholder="Enter your email"
            value="<%= user.email ? user.email : '' %>"
          />
        </td>
      </tr>
      <tr>
        <td>First Name:</td>
        <td>
          <input
            id="firstNameInput"
            name="firstName"
            type="text"
            placeholder="Enter your first name"
            value="<%= user.firstName ? user.firstName : '' %>"
          />
        </td>
      </tr>
      <tr>
        <td>Last Name:</td>
        <td>
          <input
            id="lastNameInput"
            name="lastName"
            type="text"
            placeholder="Enter your last name"
            value="<%= user.lastName ? user.lastName : '' %>"
          />
        </td>
      </tr>
      <tr>
        <td>Password:</td>
        <td><input id="passwordInput" name="password" type="password" placeholder="Enter your password" /></td>
      </tr>
      <tr>
        <td>Password Confirmation:</td>
        <td><input id="passwordConfirmInput" name="passwordConfirm" type="password" placeholder="Confirm your password" /></td>
      </tr>
      <tr>
        <td></td>
        <td><input id="submitButton" type="submit" value="Submit" /></td>
      </tr>
    </tbody>
  </table>
</form>
<%= errorMessage %>
