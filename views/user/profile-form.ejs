<form action="/user/edit/<%= user._id %>" method="POST">
  <table>
    <tbody>
      <tr>
        <td>User Name:</td>
        <td>
          <input
            name="username"
            type="text"
            value="<%= user.username ? user.username : '' %>"
          />
        </td>
      </tr>
      <tr>
        <td>Email:</td>
        <td>
          <input
            name="email"
            type="text"
            value="<%= user.email ? user.email : '' %>"
          />
        </td>
      </tr>
      <tr>
        <td>First Name:</td>
        <td>
          <input
            name="firstName"
            type="text"
            value="<%= user.firstName ? user.firstName : '' %>"
          />
        </td>
      </tr>
      <tr>
        <td>Last Name:</td>
        <td>
          <input
            name="lastName"
            type="text"
            value="<%= user.lastName ? user.lastName : '' %>"
          />
        </td>
      </tr>
      <tr>
        <td>Current Password:</td>
        <td><input name="currentPassword" type="password" /></td>
      </tr>

      <tr>
        <td>New Password:</td>
        <td><input name="newPassword" type="password" /></td>
      </tr>

      <tr>
        <td>Password Confirmation:</td>
        <td><input name="passwordConfirm" type="password" /></td>
      </tr>
    </tbody>
  </table>
</form>
<%= errorMessage %>
